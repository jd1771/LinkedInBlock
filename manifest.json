{
    "manifest_version": 3,
    "name": "LinkedInBlock",
    "version": "1.0.0",
    "description": "Block companies from appearing in LinkedIn job searches",

    "permissions": ["storage", "activeTab"],

    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/jobs/*",
                "https://www.linkedin.com/jobs"
            ],
            "js": ["contentScript.js"]
        }
    ],

    "action": {
        "default_popup": "popup.html"
    }
}
