{
    "manifest_version": 3,
    "name": "LinkedInBlock",
    "version": "1.0.0",
    "description": "Block companies from appearing in LinkedIn job searches",

    "permissions": ["storage", "activeTab"],

    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/jobs/search*"],
            "js": ["contentScript.js"],
            "run_at": "document_idle"
        }
    ],

    "action": {
        "default_popup": "popup.html"
    }
}
